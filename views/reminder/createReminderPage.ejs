<!-- bm - create new reminder -->
<%- include('../partials/appNavbar.ejs'); -%>


<div class="container-flex align-items-start justify-content-center w-100 px-3">
  <div class="row row-cols-">
    <%- include('../partials/reminderSidebar.ejs'); -%>


    <div class="container-flex col p-3">
      <form class="" action="/reminder/createReminder" method="POST">
        <div class="form-group row">
          <label for="heading" class="col-sm-2 col-form-label">Heading</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="heading" id="heading">
          </div>
        </div>
        <div class="form-group row">
          <label for="details" class="col-sm-2 col-form-label">Details</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="details" id="details">
          </div>
        </div>
        <div class="form-group row">
          <label for="date" class="col-sm-2 col-form-label">Date</label>
          <div class="col-sm-10">
            <input type="date" class="" name="date" id="date">
          </div>
        </div>
        <div class="form-group row">
          <label for="time" class="col-sm-2 col-form-label">Time</label>
          <div class="col-sm-10">
            <input type="time" class="" name="time" id="time">
          </div>
        </div>
        <fieldset class="form-group">
          <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Tags</legend>
            <div class="col-sm-10">
              <div class="row">
              <div class="div col-3">
              <div class="form-check">
                <input class="form-check-input" name="tag-priority" type="checkbox" id="tag-priority">
                <label class="form-check-label" for="tag-priority">
                  <img src="/imgs/tag-priority.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-idea" type="checkbox" id="tag-idea">
                <label class="form-check-label" for="tag-idea">
                  <img src="/imgs/tag-idea.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-shop" type="checkbox" id="tag-shop">
                <label class="form-check-label" for="tag-shop">
                  <img src="/imgs/tag-shop.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-fix" type="checkbox" id="tag-fix">
                <label class="form-check-label" for="tag-fix">
                  <img src="/imgs/tag-fix.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-clean" type="checkbox" id="tag-clean">
                <label class="form-check-label" for="tag-clean">
                  <img src="/imgs/tag-clean.png" alt="">
                </label>
              </div>
              </div>
                <div class="div col-3">
              <div class="form-check">
                <input class="form-check-input" name="tag-travel" type="checkbox" id="tag-travel">
                <label class="form-check-label" for="tag-travel">
                  <img src="/imgs/tag-travel.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-dine" type="checkbox" id="tag-dine">
                <label class="form-check-label" for="tag-dine">
                  <img src="/imgs/tag-dine.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-child" type="checkbox" id="tag-child">
                <label class="form-check-label" for="tag-child">
                  <img src="/imgs/tag-child.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-pet" type="checkbox" id="tag-pet">
                <label class="form-check-label" for="tag-pet">
                  <img src="/imgs/tag-pet.png" alt="">
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" name="tag-birthday" type="checkbox" id="tag-birthday">
                <label class="form-check-label" for="tag-birthday">
                  <img src="/imgs/tag-birthday.png" alt="">
                </label>
              </div>
                </div>

              </div>
            </div>
          </div>
        </fieldset>

        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script rel="app/js" src="/js/createReminderPageEJS.js"></script>
